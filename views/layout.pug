<!-- TODO: Get Medical Staff dropdown to work properly-->
doctype html
html
	head
		title CMS
		link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
		link(rel='stylesheet' href='/css/style.css')

	body
		nav.navbar.navbar-inverse.navbar-fixed-top
			.container
				.navbar-header
					button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href='/') Medical System
				#navbar.collapse.navbar-collapse
					ul.nav.navbar-nav
						if user
							if user.admin
								li.dropdown
									a(href='#',data-toggle='dropdown').dropdown-toggle Patients
										b.caret
									ul.dropdown-menu
										li: a(href='/patientslist') All Patients
										li: a(href='/patients/add') Add Patient
								li.dropdown
									a(href='#',data-toggle='dropdown').dropdown-toggle Medical Staff
										b.caret
									ul.dropdown-menu
										li: a(href='/doctorslist') Doctors
										li: a(href='/nurseslist') Nurses 
										li: a(href='/receptionistslist') Receptionists
								li
									a(href='/appointments_list') Appointments
								li
									a(href='/equipment') Equipment

					ul.nav.navbar-nav.navbar-right
						if user
							li 
								a(href='/users/logout') Logout
						else
							li
								a(href='/users/register') Register
							li
								a(href='/users/login') Login

		br
		br
		br
		.container
			!= messages('message', locals)
			if errors
				each error, i in errors
					div(class="alert alert-danger") #{error.msg}
					-break
			block content
			br
			hr
			footer
				p Copyright &copy; 2018
		script(src='/bower_components/jquery/dist/jquery.js')
		script(src='/bower_components/bootstrap/dist/js/bootstrap.js')
		script(src='/js/main.js')



